.
  <?php
    get_template_part( 'template-parts/content/content-loading' );
  ?>
.page-wrap
  .
    <?php
      get_template_part(#{get_template_header});
    ?>
  main(role="main")
    .page-fixed-bg
    .
      <?php
        if ( have_posts() ) {
          while ( have_posts() ) {
            the_post();
            get_template_part( 'template-parts/content/content-page' );
          }
        } else {
          get_template_part( 'template-parts/content/content-none' );
        }
      ?>
  .
    <?php
      get_footer();
    ?>
